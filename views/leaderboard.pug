doctype html
head
  meta(charset="UTF-8")
  meta(
    content="width=device-width, initial-scale=1.0" 
    name="viewport"
    )
  title Leaderboard
  style.
    body {
      padding: 0;
      margin: 0;
      display: flex;
      background-color: #f2f2f2;
      justify-content: center;
      height: 100vh;
      align-items: center;
      flex-direction: column;
      font-family: Arial, sans-serif;
      }
      .container {
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      text-align: center;
      width: 80%;
      padding: 20px;
      background-color: #fff;
      max-width: 600px;
      }
      h1 {
      margin-bottom: 20px;
      }
      .userdsp {
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      }
      .userdspn {
      border-radius: 5px 0 0 5px;
      padding: 10px;
      background-color: #dad27a;
      color: #fff;
      width: 45%;
      }
      .uscores {
      padding: 10px;
      background-color: #dad27a;
      color: #fff;
      border-radius: 0 5px 5px 0;
      width: 45%;
      }
      button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #dad27a;
      color: #fff;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      }
      button:hover {
      background-color: #d6ed7a;
      }
        .footer {
        margin-top: 20px;
        text-align: center;
        }
       .footer a {
        text-decoration: none;
        color: #333;
        margin: 0 10px;
        }
      .footer a:hover {
        color: #555;
        }
.container
  h1 Leaderboard
  each user in users
    .userdsp
      .userdspn #{user.username}
      .uscores #{user.scoreHistory[0]}
  button(onclick="gpage()") select new genre
  block footer
      a(href='/login') Login
      |
      |
      a(href='/register') Register 
      |
      |
      a(href='/add_question') Add Question
      |
      |
      a(href='/logout') Logout 
script.
  function gpage() {
    window.location.href = "select"; //or html? not sure, just want it to go there
    }