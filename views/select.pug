doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Choose Your Options
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
        }
        .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        }
        .input-group {
        margin-bottom: 20px;
        }
        .input-group select {
        width: 100px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        }
        .input-group input[type="submit"] {
        background-color: #dad27a;
        color: #fff;
        cursor: pointer;
        width: 325px;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        }
        .input-group input[type="submit"]:hover {
        background-color: #4e4a30;
        }
        .footer {
        margin-top: 20px;
        text-align: center;
        }
       .footer a {
        text-decoration: none;
        color: #333;
        margin: 0 10px;
        }
      .footer a:hover {
        color: #555;
        }
  body
    .container
      //- drop down menu to select question genre and difficulty, save this
      form(
        method="POST" 
        action="/question" 
        )
        .input-group
          label(for="difficulty") Select Difficulty:
          select(name='difficulty')
            option(value='easy') Easy
            option(value='medium') Medium
            option(value='hard') Hard
        .input-group
          label(for="category") Select Category:
          select(name='category')
            option(value='Science: Mathematics') Math
            option(value='General Knowledge') General Knowledge
            option(value='Science &amp; Nature') Science
        .input-group
          input(
            value="Next" 
            type="submit"
            )
  block footer
    a(href='/login') Login
    |
    |
    a(href='/register') Register 
    |
    |
    a(href='/add_question') Add Question
    |
    |
    a(href='/logout') Logout 